                {
                    <input readonly class="form-control" />
                }
                else
                {
                    <input readonly class="form-control" value="@Model.Subsection5.Title" />
                }
            </div>
            <div class="col-md-5 align-items-start">
                <label asp-for="SubsectionText5" class="control-label"></label>
                <textarea readonly rows="5" cols="50" asp-for="SubsectionText5" class="form-control"></textarea>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
