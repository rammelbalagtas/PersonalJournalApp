        <div class="row form-group">
            <div class="col-md-4 align-items-start">
                <label asp-for="SubsectionId1" class="control-label"></label>
                @if (Model.Subsection1 == null)
                {
                    <input readonly class="form-control" />
                }
                else
                {
                    <input readonly class="form-control" value="@Model.Subsection1.Title" />
                }
            </div>
            <div class="col-md-5 align-items-start">
                <label asp-for="SubsectionText1" class="control-label"></label>
                <textarea readonly rows="5" cols="50" asp-for="SubsectionText1" class="form-control"></textarea>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-4 align-items-start">
                <label asp-for="SubsectionId2" class="control-label"></label>
                @if (Model.Subsection2 == null)
                {
                    <input readonly class="form-control" />
                }
                else
                {
                    <input readonly class="form-control" value="@Model.Subsection2.Title" />
                }
            </div>
            <div class="col-md-5 align-items-start">
                <label asp-for="SubsectionText2" class="control-label"></label>
                <textarea readonly rows="5" cols="50" asp-for="SubsectionText2" class="form-control"></textarea>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-4 align-items-start">
                <label asp-for="SubsectionId3" class="control-label"></label>
                @if (Model.Subsection3 == null)
                {
                    <input readonly class="form-control" />
                }
                else
                {
                    <input readonly class="form-control" value="@Model.Subsection3.Title" />
                }
            </div>
            <div class="col-md-5 align-items-start">
                <label asp-for="SubsectionText3" class="control-label"></label>
                <textarea readonly rows="5" cols="50" asp-for="SubsectionText1" class="form-control"></textarea>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-4 align-items-start">
                <label asp-for="SubsectionId4" class="control-label"></label>
                @if (Model.Subsection4 == null)
                {
                    <input readonly class="form-control" />
