@model PersonalJournal.Models.Models.JournalEntry

@{
    ViewData["Title"] = "Delete Journal Entry";
}

<h4>Journal Entry</h4>
<hr />

<div class="row">
    <div class="col-md-12">

        <div class="row form-group">
            <div class="col-md-2 align-items-start">
                <label asp-for="Title" class="control-label"></label>
            </div>
            <div class="col-md-4 align-items-start">
                <input readonly asp-for="Title" class="form-control" />
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-2 align-items-start">
                <label asp-for="CategoryId" class="control-label"></label>
            </div>
            <div class="col-md-4 align-items-start">
                <input readonly class="form-control" value="@Model.Category.Title" />
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-2 align-items-start">
                <label asp-for="MoodId" class="control-label"></label>
            </div>
            <div class="col-md-4 align-items-start">
                <input readonly class="form-control" value="@Model.Mood.Title" />
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-2 align-items-start">
                <label asp-for="DateTime" class="control-label"></label>
            </div>
            <div class="col-md-3 align-items-start">
                <input readonly asp-for="DateTime" class="form-control" />
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-2 align-items-start">
                <label asp-for="Description" class="control-label"></label>
            </div>
            <div class="col-md-5 align-items-start">
                <textarea readonly rows="5" cols="50" asp-for="Description" class="form-control"></textarea>
            </div>
        </div>

        <h5>Subsections</h5>
